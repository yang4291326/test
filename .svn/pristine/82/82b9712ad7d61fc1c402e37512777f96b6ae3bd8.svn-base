<!-- 日志授权页面 -->
<extend name="Public/base" />
<block name="body">
<style>
.bd{
	margin-left: 40px;
}
.divsion{
	margin-left: 30px;
}
.tab-wrap{
	margin-bottom: 60px;
}
</style>

    <div class="tw-layout">
        <div class="tw-list-hd">用户日志授权</div>
        <div class="tw-list-wrap tw-edit-wrap">
            <div class="tab-wrap">
                <div class="tab-content">
                    <!-- 访问授权 -->
                    <div class="tab-pane in">
                        <form action="{:U('HomeLogModularAccess/logAuth')}" enctype="application/x-www-form-urlencoded" method="POST" class="form-horizontal auth-form ajaxForm">
                            <volist name="nodeTreeList" id="node" >
                                <dl class="checkmod">
                                    <dt class="hd">
                                        <label class="checkbox"><input class="auth_rules rules_all" type="checkbox" name="rules[]" value="{$node.id}">{$node.name}</label>
                                    </dt>
                                    <dd class="bd">
                                        <present name="node['child']">
                                            <volist name="node['child']" id="child" >
                                                <div class="rule_check">
                                                    <div>
                                                        <label class="checkbox" <notempty name="child['tip']">title='{$child.name}'</notempty>>
                                                            <input class="auth_rules rules_row" type="checkbox" name="rules[]" value="{$child.id}"/>{$child.name}
                                                        </label>
                                                    </div>
                                                   <notempty name="child['operator']">
                                                       <span class="divsion">&nbsp;</span>
                                                       <span class="child_row">
                                                           <volist name="child['operator']" id="op">
                                                               <label class="checkbox" <notempty name="op['tip']">title='{$op.name}'</notempty>>
                                                                   <input class="auth_rules" type="checkbox" name="rules[]"
                                                                   value="{$child.id}"/>{$op.name}
                                                               </label>
                                                           </volist>
                                                       </span>
                                                   </notempty>
                                                </div>
                                            </volist>
                                        </present>
                                    </dd>
                                </dl>
                            </volist>
                            <input type="hidden" name="member_id" value="{$member_id}" />
                            <div class="tw-tool-bar-bot">
                                <button type="submit" class="tw-act-btn-confirm">提交</button>
                                <button type="button" onclick="goback()" class="tw-act-btn-cancel">返回</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</block>
<block name="script">
    <script type="text/javascript" charset="utf-8">
        +function($){
            var rules = [{$this_group}];
            $('.auth_rules').each(function(){
                if( $.inArray( parseInt(this.value,10),rules )>-1 ){
                    $(this).prop('checked',true);
                }
            });

            //全选节点
            $('.rules_all').on('change',function(){
                $(this).closest('dl').find('dd').find('input').prop('checked',this.checked);
            });

            $('.rules_row').on('change',function(){
                $(this).closest('.rule_check').find('.child_row').find('input').prop('checked',this.checked);
            });
        }(jQuery);
    </script>
</block>
