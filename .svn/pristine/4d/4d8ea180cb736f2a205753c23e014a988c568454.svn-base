<!-- 管理员(用户)新增和编辑页面 -->
<extend name="Public/base" />
<block name="body">
<style>
.bd{
    margin-left: 40px;
}
.divsion{
    margin-left: 30px;
}
.tab-wrap{
    margin-bottom: 60px;
}
</style>

    <div class="tw-layout">
        <div class="tw-list-hd">用户授权</div>
        <div class="tw-list-wrap tw-edit-wrap">
            <div class="tab-wrap">
                <div class="tab-content">
                    <!-- 访问授权 -->
                    <div class="tab-pane in">
                        <form action="{:U('Member/auth')}" enctype="application/x-www-form-urlencoded" method="POST" class="form-horizontal auth-form ajaxForm">
                            <volist name="nodeTreeList" id="node" >
                                <dl class="checkmod">
                                    <dt class="hd">
                                        <label class="checkbox"><input class="auth_rules rules_all" type="checkbox" name="rules[]" value="{$node.id}">{$node.title}</label>
                                    </dt>
                                    <dd class="bd">
                                        <present name="node['child']">
                                            <volist name="node['child']" id="child" >
                                                <div class="rule_check">
                                                    <div class="checks">
                                                        <label class="checkbox" <notempty name="child['tip']">title='{$child.tip}'</notempty>>
                                                            <input class="auth_rules rules_row" type="checkbox" name="rules[]" value="{$child.id}"/>{$child.title}
                                                        </label>
                                                    </div>
                                                   <notempty name="child['operator']">
                                                       <span class="divsion">&nbsp;</span>
                                                       <span class="child_row checks">
                                                           <volist name="child['operator']" id="op">
                                                               <label class="checkbox" <notempty name="op['tip']">title='{$op.tip}'</notempty>>
                                                                   <input class="auth_rules rules_three" type="checkbox" name="rules[]"
                                                                   value="{$op.id}"/>{$op.title}
                                                               </label>
                                                           </volist>
                                                       </span>
                                                   </notempty>
                                                </div>
                                            </volist>
                                        </present>
                                    </dd>
                                </dl>
                            </volist>
                            <input type="hidden" name="id" value="{$id}" />
                            <div class="tw-tool-bar-bot">
                                <button type="submit" class="tw-act-btn-confirm">提交</button>
                                <button type="button" onclick="goback()" class="tw-act-btn-cancel">返回</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</block>
<block name="script">
    <script type="text/javascript" charset="utf-8">
        +function($){
            var rules = [{$this_group}];
            $('.auth_rules').each(function(){
                if( $.inArray( parseInt(this.value,10),rules )>-1 ){
                    $(this).prop('checked',true);
                }
            });

            //全选节点
            $('.rules_all').on('change',function(){
                var isChecked = $(this).is(':checked'); // 判断点中状态
                if ( isChecked == true ) {
                    $(this).parents('dl').find('dd input').prop('checked',true);
                } else {
                    $(this).parents('dl').find('dd input').prop('checked',false);
                }
            });
            $('.rules_row').on('change',function(){
                var isChecked = $(this).is(':checked'); // 判断点中状态
                if ( isChecked == true ) {
                    $(this).parents('.rule_check').find('input').prop('checked',true);
                } else {
                    $(this).parents('.rule_check').find('input').prop('checked',false);
                }
            });

            $('select[name=group]').change(function(){
                location.href = this.value;
            });

            //导航高亮
//            highlight_subnav('{:U('AuthManager/index')}');
        }(jQuery);
    </script>
</block>
