<extend name="Public/base"/>
<block name="body">
<div class="tw-layout">
		<div class="tw-list-hd">
			商品分类 
		</div>
		<notempty name="prompt_tips">
			<div class="tw_list_tips">
				<div class="tips-name">提示语：</div>
				<div class="tips-content">{$prompt_tips}</div>
			</div>
		</notempty>
		<div class="tw-list-top">

		    <div class="tw-tool-bar">
	    		<a class="tw-tool-btn-add" href="{:U('edit')}">
	                <i class="tw-icon-plus-circle"></i> 添加
	            </a>
	            <a class="tw-tool-btn-del" onclick="javascript:recycle('chkbId', '确定删除？删除后该分类及子分类将不会显示!')">
	                <i class="tw-icon-minus-circle"></i> 批量删除
	            </a>
	        </div>
	    </div>
		<div class="tw-list-wrap">
			<table class="tw-table tw-table-list tw-table-fixed">
				<thead>
					<tr>
						<th width="10" class="row-selected">
	                        <input class="checkbox check-all" type="checkbox">
	                    </th>
						<th width="50">序号</th>
						<th width="55%">分类名称</th>
						<th width="80">层级</th>
						<th width="100">排序</th>
						<th width="100">操作人</th>
						<th width="100">操作时间</th>
						<th width="260">操作</th>
					</tr>
				</thead>
				<tbody>
					<notempty name="goods_cate_list">
					<volist name="goods_cate_list" id="v" key="k">
						<tr>
							<td>
								<if condition="$v.cate_level neq 1">
									<input class="ids row-selected" type="checkbox" name="chkbId" value="{$v.id}">
								</if>
							</td>
							<td>{$k|page_code}</td>
							<td class="text-left">{$v.title_show}</td>
							<td>{$v.cate_level}</td>
							<td>{$v.sort}</td>
							<td>{$v.user_name}</td>
							<td>{$v.add_time|time_format}</td>
							<td class="text-left">
								<a class="tw-tool-btn-edit"  href="{:U('edit?id='.$v['id'])}">
				                    <i class="tw-icon-pencil"></i> 修改
				                </a>
				                <if condition="$v.cate_level neq 1">
				                <a class="tw-tool-btn-del" onclick="javascript:recycle({$v['id']}, '确定删除？删除后该分类及子分类将不会显示!')">
	                                <i class="tw-icon-minus-circle"></i> 删除
	                            </a>
	                        	</if>
	                            <if condition="$v.cate_level eq 4">
									<a class="tw-tool-btn-add" href="{:U('goodsAttribute/index?cate_id='.$v['id'])}">
						                <i class="tw-icon-plus-circle"></i> 自定义属性
						            </a>
							    </if>
							</td>
						</tr>
					</volist>
					<else/>
					    <td colspan="8" class="text-center"> aOh! 暂时还没有内容! </td>
					</notempty>
				</tbody>
			</table>
			<!-- 分页 -->
		    <div class="page">
		       
		    </div>
		</div>
</div>
</block>
<block name="script">
<script type="text/javascript">

</script>
</block>