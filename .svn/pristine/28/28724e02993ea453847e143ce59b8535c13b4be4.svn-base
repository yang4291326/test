<extend name="Public/base"/>
<block name="style">
	<style>
	.cfname a{
		color:#3366FF;
	}
	.cfname a:hover{
		color:#3366FF;
		text-decoration: underline;
	}
	</style>
</block>
<block name="body">
<div class="tw-layout">
		<div class="tw-list-hd">
			{$cart_info.name} - 商品确认详情
		</div>
		 <div class="tw-list-top">
		    <div class="tw-tool-bar">
	            <a class="tw-tool-btn-del" onclick="javascript:recycle('chkbId', '确认删除？删除后该数据将放入回收站!')">
                    <i class="tw-icon-minus-circle"></i> 批量删除
                </a>
	         </div>
	         <form action="__SELF__" method="get" id='frmSearch'>
                <div class="tw-search-bar">
			        <!-- 高级搜索 -->
			        <div class="search-form fr cf">
			            <div class="sleft">
			                <input type="text" name="goods_name" class="search-input" value="{:I('goods_name')}" placeholder="请输入商品名称">
			                <a type="submit" class="sch-btn" onclick="$('#frmSearch').submit();"><i class="btn-search"></i></a>
			            </div>
			        </div>
		        </div>
            </form>
	    </div>
		<div class="tw-list-wrap">
			<table class="tw-table tw-table-list tw-table-fixed">
				<thead>
					<tr>
						<th width="10" class="row-selected">
	                        <input class="checkbox check-all" type="checkbox">
	                    </th>
						<th width="50">ID</th>
						<th>商品名称</th>
						<th width="8%">颜色</th>
						<th width="10%">尺寸</th>
						<th width="8%">风格</th>
						<th width="8%">材质</th>
						<th width="8%">喜好等级</th>
						<th width="8%">收藏夹单号</th>
						<th width="10%">添加时间</th>
					</tr>
				</thead>
				<tbody>
					<notempty name="list">
					<volist name="list" id="v">
						<tr>
							<td><input class="ids row-selected" type="checkbox" name="chkbId" value="{$v.id}"></td>
							<td>{$v.id}</td>
							<td class="text-left cfname">{$v.goods_name}</td>
							<td>{$v.color}</td>
							<td>{$v.size}</td>
							<td>{$v.style}</td>
							<td>{$v.material}</td>
							<td>{$v.like_level|show_favorite_like_level}</td>
							<td>{$cart_info.collection_sn}</td>
							<td>{$v.add_time|time_format}</td>
						</tr>
					</volist>
					<else/>
					    <td colspan="10" class="text-center"> aOh! 暂时还没有内容! </td>
					</notempty>
				</tbody>
			</table>
			<!-- 分页 -->
		    <div class="page">{$page}</div>
		</div>
</div>
</block>
<block name="script">
<script type="text/javascript">
    RECYCLE_URL = "{:U('detailRecycle')}"; // 重新定义删除地址
</script>
</block>