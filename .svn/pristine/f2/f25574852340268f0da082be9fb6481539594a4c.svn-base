<extend name="Public/base"/>
<block name="style">
	<style>
	.cfname a{
		color:#3366FF;
	}
	.cfname a:hover{
		color:#3366FF;
		text-decoration: underline;
	}
	</style>
</block>
<block name="body">
<div class="tw-layout">
		<div class="tw-list-hd">
			商品确认管理 
		</div>
		<notempty name="prompt_tips">
			<div class="tw_list_tips">
				<div class="tips-name">提示语：</div>
				<div class="tips-content">{$prompt_tips}</div>
			</div>
		</notempty>
		<div class="tw-list-top">
		    <div class="tw-tool-bar">
	            <a class="tw-tool-btn-del" onclick="javascript:recycle('chkbId', '确认删除？删除后该数据将放入回收站!')">
                    <i class="tw-icon-minus-circle"></i> 批量删除
                </a>
	         </div>
	         <form action="__SELF__" method="post" id='frmSearch'>
                <div class="tw-search-bar">
			        <!-- 高级搜索 -->
			        <div class="search-form fr cf">
			            <div class="sleft">
			                <input type="text" name="collection_sn" class="search-input" value="{:I('collection_sn')}" placeholder="请输入商品确认单号">
			                <a type="submit" class="sch-btn" onclick="$('#frmSearch').submit();"><i class="btn-search"></i></a>
			            </div>
			        </div>
		        </div>
            </form>
	    </div>
		<div class="tw-list-wrap">
			<table class="tw-table tw-table-list tw-table-fixed">
				<thead>
					<tr>
						<th width="10" class="row-selected">
	                        <input class="checkbox check-all" type="checkbox">
	                    </th>
						<th width="50">序号/th>
						<th width="20%">单号列表</th>
						<th width="10%">用户名称</th>
						<th width="20%">内容概述</th>
						<th width="10%">添加时间</th>
						<th width="15%">操作</th>
					</tr>
				</thead>
				<tbody>
					<notempty name="list">
					<volist name="list" id="v" key="k">
						<tr>
							<td><input class="ids row-selected" type="checkbox" name="chkbId" value="{$v.id}"></td>
							<td>{$k|page_code}</td>
							<td class="cfname"><a href="{:U('cartDetail?id='.$v['id'])}" title="查看列表">{$v.collection_sn}</a></td>
							<td>{$v.user_name}</td>
							<td class="text-left">{$v.remark}</td>
							<td>{$v.add_time|time_format}</td>
							<td>
				                <a class="tw-tool-btn-del" onclick="javascript:recycle({$v['id']}, '确认删除？删除后该数据将放入回收站!')">
	                                <i class="tw-icon-minus-circle"></i> 删除
	                            </a>
	                            <a class="tw-tool-btn-copy"  onclick="showPhoto('{$v.cart_photo}')">
				                    <i class="tw-icon-cogs"></i> 查看拍照
				                </a>
							</td>
						</tr>
					</volist>
					<else/>
					    <td colspan="7" class="text-center"> aOh! 暂时还没有内容! </td>
					</notempty>
				</tbody>
			</table>
			<!-- 分页 -->
		    <div class="page">{$page}</div>
		</div>
</div>
</block>
<block name="script">
<script type="text/javascript">
function showPhoto(path) {
	if (path == '') {
		toastr.error('拍照不存在');
	} else {
		window.location.href = path;
	}
}
</script>
</block>