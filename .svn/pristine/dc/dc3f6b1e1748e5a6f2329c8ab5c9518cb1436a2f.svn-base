<extend name="Public/base"/>

<block name="body">
    <div class="tw-layout">
	<div class="tw-list-hd">
             {:isset($info['id'])?'编辑':'新增'}后台模块提示语
        </div>
		
	    <div class="tw-list-wrap tw-edit-wrap">
            <form action="__SELF__" method="post" class="form-horizontal ajaxForm">                

                <div class="form-item">
                    <label class="item-label">后台模块名称<span class="check-tips"><b>*</b>（后台模块名称）</span></label>
                    <div class="controls">
                        <select name="menu_id" id="menu_id">
                            <option value="0">----请选择后台模块名称----</option>                         
                            <volist name="menuData" id="vo">
                                <option value="{$vo.id}">{$vo.title}</option>                                
                            </volist>
                        </select>
                        <script>
                            $('#menu_id').val("{$info.menu_id|default=0}");
                        </script>
                    </div>
                </div>
                
                <div class="form-item">
                    <label class="item-label">提示语内容<span class="check-tips"><b>*</b>（输入提示语内容）</span></label>
                    <div class="controls">
                        <textarea name="content" rows="5" cols="57">{$info.content}</textarea>
                    </div>
                </div>
                
                <div class="form-item">
                    <label class="item-label">提示语备注<span class="check-tips"><b>*</b>（输入提示语备注）</span></label>
                    <div class="controls">
                        <textarea name="remark" rows="5" cols="57">{$info.remark}</textarea><br/>
                    </div>
                </div>

                 <div class="tw-tool-bar-bot">
                    <input type="hidden" name="id" value="{$info.id}"/>
                    <button type="submit" class="tw-act-btn-confirm">提交</button>
                    <button type="button" onclick="goback()" class="tw-act-btn-cancel">返回</button>
                </div>
            </form>
	    </div>
    </div>
</block>

<block name="script">
    <script> 
    </script>
</block>